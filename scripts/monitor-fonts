#!/bin/bash

sed -i ~/.config/i3/config -e 's/Material Design Icons 15/Material Design Icons 13/g'
sed -i ~/.config/i3/config -e 's/^gaps inner.*/gaps inner 25/g'
i3-msg reload
nohup python3 ~/.config/i3/scripts/autoname-workspaces.py > /dev/null &

gsettings set org.gnome.desktop.wm.preferences titlebar-font \
        'Futura Bk BT 11'

gsettings set org.gnome.desktop.interface font-name \
        'Futura Bk BT 11'

gsettings set org.gnome.desktop.interface document-font-name \
        'Futura Bk BT 11'

gsettings set org.gnome.desktop.interface monospace-font-name \
        'Inconsolata Medium 11'

sed -i ~/Dropbox/dotfiles/.Xdefaults -e 's/size=22/size=16/g'
sed -i ~/Dropbox/dotfiles/.Xdefaults-solarized-dark -e 's/size=22/size=16/g'
sed -i ~/Dropbox/dotfiles/.Xdefaults-solarized-light -e 's/size=22/size=16/g'
sed -i ~/Dropbox/dotfiles/.Xdefaults-tomorrow-night-eighties -e 's/size=22/size=16/g'
xrdb -load ~/Dropbox/dotfiles/.Xdefaults
